@model List<CourseManagement.Models.HocVien>

@{
    ViewData["Title"] = "Quản lí học viên";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

<div class="d-flex">
    <!-- Sidebar -->
    <div class="bg-dark text-white border-end" style="width: 250px; height: 100vh;">
        <h5 class="p-3">Admin</h5>
        <ul class="nav flex-column">
            <li class="nav-item">
                <a class="nav-link text-white" href="/Admin/Main/Main">Màn hình chính</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-white active" href="/Admin/Main/ManageStudents">Quản lí học viên</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-white" href="/Admin/Main/ManageCourses">Quản lí khóa học</a>
            </li>
        </ul>
    </div>

    <!-- Main Content -->
    <div class="container-fluid p-4">
        <h2>Quản lí học viên</h2>
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h4>Danh sách học viên</h4>
            <a href="/Admin/Main/AddStudent" class="btn btn-dark">
                <i class="bi bi-plus-circle"></i> Thêm học viên
            </a>
        </div>
        <table class="table table-striped">
            <thead class="table-dark">
                <tr>
                    <th>Số Thứ Tự</th>
                    <th>Mã học viên</th>
                    <th>Tên học viên</th>
                    <th>Email</th>
                    <th>Số điện thoại</th>
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Count > 0)
                {
                    int index = 1;
                    foreach (var student in Model)
                    {
                        if (student.Role != 0) 
                        {
                            <tr>
                                <td>@index</td>
                                <td>@student.MaHocVien</td>
                                <td>@student.HoTen</td>
                                <td>@student.Email</td>
                                <td>@student.SoDienThoai</td>
                                <td>
                                    <a href="/Admin/Main/EditStudent/@student.MaHocVien" class="btn btn-secondary btn-sm">
                                        <i class="bi bi-pencil"></i> Sửa
                                    </a>
                                    <a href="/Admin/Main/DeleteStudent/@student.MaHocVien" class="btn btn-dark btn-sm">
                                        <i class="bi bi-trash"></i> Xóa
                                    </a>
                                </td>
                            </tr>
                            index++;
                        }
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center">Không có học viên nào.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
